{
    "compilerOptions": {
        "target": "es2019",
        "module": "commonjs",
        "outDir": "target",
        "moduleResolution": "node",
        "jsx": "react",
        "importHelpers": true,
        "sourceMap": true,
        "strict": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "noImplicitReturns": true,
        "noFallthroughCasesInSwitch": true,
        "noUncheckedIndexedAccess": true,
        "incremental": true,
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true,
        "resolveJsonModule": true,
        "skipLibCheck": true
    },
    "include": ["src/**/*", "test/**/*"],
    "files": ["gatsby-browser.tsx", "gatsby-config.ts", "gatsby-node.ts", "./target/gatsby-types.d.ts"]
}
