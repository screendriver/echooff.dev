{
	"$schema": "https://docs.renovatebot.com/renovate-schema.json",
	"dependencyDashboard": true,
	"labels": ["renovate"],
	"lockFileMaintenance": {
		"enabled": true,
		"automerge": true
	},
	"packageRules": [
		{
			"groupName": "Astro dependencies",
			"groupSlug": "astro-dependencies",
			"matchPackageNames": ["@astrojs/*", "astro", "astro-*", "*-astro"]
		},
		{
			"groupName": "Fastify dependencies",
			"groupSlug": "fastify-dependencies",
			"matchPackageNames": ["@fastify/*", "fastify"]
		},
		{
			"matchFileNames": [".woodpecker/*.yaml"],
			"matchUpdateTypes": ["minor", "patch"],
			"automerge": true,
			"automergeType": "branch"
		},
		{
			"matchPackageNames": ["eslint", "@enormora/eslint-config-*"],
			"groupName": "eslint packages"
		},
		{
			"groupName": "jscpd dependencies",
			"groupSlug": "jscpd-dependencies",
			"matchPackageNames": ["@jscpd/*", "jscpd"]
		},
		{
			"matchDepTypes": ["dependencies", "devDependencies"],
			"matchUpdateTypes": ["minor", "patch"],
			"automerge": true,
			"automergeType": "branch"
		}
	]
}
