{
	"$schema": "https://docs.renovatebot.com/renovate-schema.json",
	"dependencyDashboard": true,
	"labels": ["renovate"],
	"prConcurrentLimit": 5,
	"lockFileMaintenance": {
		"enabled": true,
		"automerge": true
	},
	"packageRules": [
		{
			"matchPackageNames": ["node"],
			"matchManagers": ["dockerfile"],
			"enabled": false
		},
		{
			"groupName": "Astro dependencies",
			"groupSlug": "astro-dependencies",
			"matchPackageNames": ["@astrojs/*", "astro", "astro-*", "*-astro"]
		},
		{
			"groupName": "Fastify dependencies",
			"groupSlug": "fastify-dependencies",
			"matchPackageNames": ["@fastify/*", "fastify"]
		},
		{
			"matchDepTypes": ["dependencies", "devDependencies"],
			"matchUpdateTypes": ["minor", "patch"],
			"automerge": true,
			"automergeType": "pr"
		}
	],
	"customManagers": [
		{
			"customType": "regex",
			"fileMatch": ["^Dockerfile$"],
			"matchStrings": [
				"FROM node:(?<currentValue>\\d+\\.\\d+\\.\\d+)",
				"FROM node:(?<currentValue>.*?)-alpine"
			],
			"depNameTemplate": "node",
			"datasourceTemplate": "node",
			"versioningTemplate": "node"
		}
	]
}
