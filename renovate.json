{
    "extends": ["config:base", ":semanticCommitsDisabled"],
    "labels": ["renovate"],
    "prConcurrentLimit": 5,
    "lockFileMaintenance": {
        "enabled": true,
        "automerge": true
    },
    "nvm": {
        "enabled": false
    },
    "packageRules": [
        {
            "extends": ["monorepo:gatsby", "schedule:weekly"],
            "groupName": "gatsby monorepo"
        },
        {
            "packagePatterns": ["eslint"],
            "groupName": "eslint packages"
        },
        {
            "extends": "monorepo:typescript-eslint",
            "groupName": "typescript-eslint monorepo"
        },
        {
            "depTypeList": ["dependencies", "devDependencies"],
            "updateTypes": ["minor", "patch"],
            "automerge": true,
            "automergeType": "branch"
        }
    ]
}
