---
import Navigation from "./Navigation.astro";

interface Props {
	readonly withBottomBorder: boolean;
}

const { withBottomBorder } = Astro.props;

let cssClass = "relative";

if (withBottomBorder) {
	cssClass = "border-b border-dracula-purple";
}
---

<header class={cssClass}>
	<Navigation />

	<slot />
</header>
