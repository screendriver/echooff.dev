---
import { icons } from "feather-icons";
import Card from "./Card.astro";
import TypeScriptIcon from "./icons/TypeScript.astro";
import JavaScriptIcon from "./icons/JavaScript.astro";
import ReactIcon from "./icons/React.astro";
import NodejsIcon from "./icons/Nodejs.astro";
import CSSIcon from "./icons/CSS.astro";
import ElmIcon from "./icons/Elm.astro";
---

<section class="bg-dracula-dark p-4 lg:p-10">
	<h3
		class="text-dracula-cyan my-2 flex items-center justify-center gap-x-2 text-2xl font-extrabold lg:items-end lg:text-4xl lg:leading-none"
	>
		Skills
		<Fragment set:html={icons.award?.toSvg({ class: "text-dracula-light w-6 h-6 lg:w-9 lg:h-9" })} />
	</h3>
	<hr
		class="bg-dracula-red from-dracula-yellow to-dracula-pink m-auto mb-4 h-2 w-1/2 rounded-lg border-none bg-gradient-to-br"
	/>
	<div
		class="text-dracula-light m-auto grid max-w-screen-lg grid-cols-1 justify-items-center gap-5 sm:grid-cols-2 sm:p-4 lg:grid-cols-3"
	>
		<Card
			title="TypeScript"
			description="is a typed superset of JavaScript that compiles to plain JavaScript."
			style="from-dracula to-dracula-cyan"
			link={new URL("https://www.typescriptlang.org")}
		>
			<TypeScriptIcon />
		</Card>
		<Card
			title="JavaScript"
			description="is a high-level, interpreted programming language that conforms to the ECMAScript specification."
			style="from-dracula-yellow to-dracula-pink"
			link={new URL("https://www.ecma-international.org/publications-and-standards/standards/ecma-262/")}
		>
			<JavaScriptIcon />
		</Card>
		<Card
			title="React"
			description="is a library for building user interfaces."
			style="from-dracula to-dracula-cyan"
			link={new URL("https://react.dev")}
		>
			<ReactIcon />
		</Card>
		<Card
			title="Node.js"
			description="is a JavaScript runtime built on Chrome's V8 JavaScript engine."
			style="from-dracula-yellow to-dracula-pink"
			link={new URL("https://nodejs.org")}
		>
			<NodejsIcon />
		</Card>
		<Card
			title="Cascading Style Sheets (CSS)"
			description="is a simple mechanism for adding style (e.g., fonts, colors, spacing) to Web documents."
			style="from-dracula to-dracula-cyan"
			link={new URL("https://www.w3.org/Style/CSS/")}
		>
			<CSSIcon />
		</Card>
		<Card
			title="Elm"
			description="is a delightful language for reliable webapps."
			style="from-dracula-yellow to-dracula-pink"
			link={new URL("https://elm-lang.org")}
		>
			<ElmIcon />
		</Card>
	</div>
</section>
