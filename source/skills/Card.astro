---
export interface Props {
	readonly link: URL;
	readonly title: string;
	readonly description: string;
	readonly style: string;
}

const { link, title, description, style } = Astro.props;
---

<article class:list={["flex items-stretch rounded-2xl bg-gradient-to-br", style]}>
	<a href={link.toString()} title={title} class="m-1 block rounded-2xl bg-dracula-darker p-3 text-center">
		<slot />
		<h3 class="inline bg-gradient-to-r from-dracula to-dracula-cyan bg-clip-text text-transparent">
			{title}
		</h3>{" "}
		<p class="inline">{description}</p>
	</a>
</article>
