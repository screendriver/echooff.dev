---
import StatisticsData from "./StatisticsData.vue";
import { icons } from "feather-icons";
---

<section>
	<h3>
		Some Stats
		<Fragment set:html={icons["bar-chart-2"]?.toSvg()} />
	</h3>

	<hr />

	<div>
		<StatisticsData client:idle />
	</div>
</section>

<style lang="scss">
	@use "../styles/variables";
	@use "../styles/mixins";

	section {
		background-color: variables.$selection;
		padding: 1rem;

		@media (min-width: variables.$large-width) {
			padding: 2.5rem;
		}
	}

	h3 {
		@include mixins.heading;

		:global(svg) {
			@include mixins.heading-icon;
		}
	}

	hr {
		@include mixins.divider;
	}

	div {
		margin: auto;
		display: grid;
		max-width: variables.$large-width;
		grid-template-columns: repeat(2, 1fr);
		gap: 0.5rem;

		@media (min-width: 640px) {
			gap: 1rem;
			padding: 1rem;
		}

		@media (min-width: variables.$large-width) {
			grid-template-columns: repeat(4, 1fr);
		}
	}
</style>
