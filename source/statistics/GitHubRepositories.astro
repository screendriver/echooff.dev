---
import type { Maybe } from "true-myth";
import type { GitHubStatistics } from "./github-statistics-schema.js";
import StatisticsFigure from "./StatisticsFigure.astro";
import StatisticsCite from "./StatisticsCite.astro";

interface Props {
	readonly githubStatistics: Maybe<GitHubStatistics>;
}

const { githubStatistics } = Astro.props;
---

<StatisticsFigure description="GitHub Repos">
	<StatisticsCite description="GitHub Repos">
		{githubStatistics.get("user").get("repositories").get("totalCount").unwrapOr(0)}
	</StatisticsCite>
</StatisticsFigure>
